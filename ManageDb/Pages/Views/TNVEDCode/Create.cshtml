@page "/TNVEDCode/Create"
@model ManageDb.Pages.Views.TNVEDCode.CreateModel

<h1>@ViewData["Title"]</h1>

<h4>TNVEDCode</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TNVEDCode.Code" class="control-label"></label>
                <input asp-for="TNVEDCode.Code" class="form-control" autofocus onchange="trim(this)" />
                <span asp-validation-for="TNVEDCode.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TNVEDCode.Name" class="control-label"></label>
                <input asp-for="TNVEDCode.Name" class="form-control" onchange="trim(this)" />
                <span asp-validation-for="TNVEDCode.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TNVEDCode.TechRegs" class="control-label"></label>
                @if (Model.TNVEDCode != null)
                {
                    <select class="form-control" size="@(Model.TechRegNameMSL.Count() + Model.TNVEDCode.TechRegs.Count)" name="TNVEDCode_TechRegs" asp-for="TNVEDCode.TechRegs" asp-items="Model.TechRegNameMSL" multiple>
                    @foreach (var techReg in Model.TNVEDCode.TechRegs!)
                    {
                        <option value="@techReg.Id" selected>@techReg.Name</option>
                    }
                    </select>
                }
                else
                {
                    <select class="form-control" size="@Model.TechRegNameMSL.Count()" name="TNVEDCode_TechRegs" asp-for="TNVEDCode.TechRegs" asp-items="Model.TechRegNameMSL" multiple>
                    </select>
                }
                <span asp-validation-for="TNVEDCode.TechRegs" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
}
